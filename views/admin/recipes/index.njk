{% extends 'layout-admin.njk' %}

{% block content %}

<main class="container main-admin">
    <h1>Gerenciar receitas</h1>    
    <div class="cards-admin">
      {% for item in items %}
      <div class="card-admin" id="{{item.id}}">
        <img src="{{item.image}}" alt="">
        <div class="card-admin-info">
          <h2>{{item.title}}</h2>
          <p>{{item.author}}</p>
          <a href="#" id="{{item.id}}" >Visualizar</a>
        </div>      
      </div>
      {% endfor %}
    </div>

  </main>

  <script src="/script.js"></script>
  

{% endblock %}
