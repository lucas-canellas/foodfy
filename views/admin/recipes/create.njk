{% extends 'layout-admin.njk' %}

{% block content %}

<main class="container">
    <form class="form-create" action="/admin/recipes" method="post">
        <div class="titulo-button">
            <h1>Criando receita</h1>
            <button>Salvar receita</button>
        </div>

        <h2>Imagem receita</h2>
        <input type="text" name="image">

        <h2>Ingredientes</h2>
        <input type="text" name="ingredients[]">
        <button type="button" class="add-ingredient">Adicionar novo ingrediente</button>

        <h2>Modo de preparo</h2>
        <input type="text" name="preparation[]">
        <button type="button" class="add-passo">Adicionar novo passo</button>

        <h2>Informações adicionais</h2>
        <textarea name="information"  cols="120" rows="10"></textarea>
        
    </form>
</main>

{% endblock %}