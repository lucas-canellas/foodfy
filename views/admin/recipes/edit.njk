{% extends 'layout-admin.njk' %}

{% block content %}

<main class="container">
    <form action="/admin/recipes/{{items.id}}?_method=PUT" class="form-create" method="post" >
        <div class="titulo-button">
            <h1>Editando receita</h1>
            <button id="{{items.id}}" type="submit">Editar receita</button>
        </div>

        <h2>Imagem receita</h2>
        <input type="text" name="image" value={{items.image}}>

        <h2>Ingredientes</h2>
        {% for item in items.ingredients %}
        <input type="text" name="ingredients[]" value="{{item}}">        
        {% endfor %}
        <button type="button" class="add-ingredient">Adicionar novo ingrediente</button>
        

        <h2>Modo de preparo</h2>
        {% for item in items.preparation %}
        <input type="text" name="preparation[]" id="" value="{{item}}">        
        {% endfor %}
        <button type="button" class="add-passo">Adicionar novo passo/button>

        <h2>Informações adicionais</h2>
        <textarea name="information" cols="120" rows="10">{{items.preparation}}</textarea>
        
    </form>
</main>
{% endblock %}
